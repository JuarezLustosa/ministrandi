<%= form_tag feedstock_output_items_path, :method => :post, :remote => true do %>
  <%= text_field_tag :autocomplete_feedstock, (""),
                     :class => "search-query",
                     "data-source" => autocompletes_feedstocks_path %>
  <%= hidden_field_tag :feedstock_id %>
  
  <%= text_field_tag :quantity, (""), placeholder: "Quantidade", size: 10  %>

  <div class="form-actions">
    <%= submit_tag 'Adicionar' %>
  </div>
<% end %>

<div id="list_items">
  <%= render 'feedstock/outputs/items/list_items' %>
</div>

<div class="form-actions">
  <%= link_to "Finalizar", 
    feedstock_output_finish_path(@feedstock_output), 
    :method => :put,
    :class => 'btn btn-small btn-danger',
    :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }  %>
</div>