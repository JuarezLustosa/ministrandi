<%= simple_form_for(@client) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :person %>
    <%= f.input :name %>
    <div id="person" class="hide">
      <%= f.input :cpf, as: :string %>
    </div>

    <div id="company">
      <%= f.input :fantasy_name %>
      <%= f.input :cnpj %>
      <%= f.input :state_inscription %>
      <%= f.input :city_inscription %>
    </div>

    <%= f.input :email, as: :email %>
    <%= f.input :phone1, as: :string %>
    <%= f.input :phone2, as: :string %>
    
    <%= render 'addresses/address_fields_for', :f => f %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                clients_path, :class => 'btn' %>
  </div>
<% end %>