<%- model_class = Client -%>
<div class="page-header">
  <h1>Clientes</h1>
</div>
<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name (:name)%></th>
      <th><%= model_class.human_attribute_name (:fantasy_name)%></th>
      <th><%= model_class.human_attribute_name (:contact)%></th>
      <th><%= model_class.human_attribute_name (:cnpj)%></th>
      <th><%= model_class.human_attribute_name (:phone1)%></th>
      <th><%= model_class.human_attribute_name (:email)%></th>
      <th>Ações</th>
    </tr>
  </thead>

  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%= client.name %></td>
        <td><%= client.fantasy_name %></td>
        <td><%= client.contact %></td>
        <td><%= client.cnpj %></td>
        <td><%= client.phone1 %></td>
        <td><%= client.email %></td>
        <td><%= link_to 'Editar', edit_client_path(client), :class => 'btn btn-mini' %>
            <%= link_to 'Apagar', client, 
            method: :delete, 
            data: { confirm: 'Tem certeza?' },
            :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo', new_client_path, :class => 'btn btn-primary' %>
