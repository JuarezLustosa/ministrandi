<%- model_class = Client -%> 
<div class="page-header">
  <h1>Clientes <%= link_to 'Novo', new_client_path, :class => 'btn btn-primary' %> </h1> 

</div>
<table class="table table-striped table-bordered table-condensed" id="clients_table">
  <thead>
    <tr>
      <th>Razão Social</th>
      <th><%= model_class.human_attribute_name (:fantasy_name)%></th>
      <th><%= model_class.human_attribute_name (:cnpj)%></th>
      <th>Telefone</th>
      <th>Endereço</th>
      <th>Vendedor</th>
      <th>Cidade</th>
      <th> Data Ultima Compra </th>
      <th>Ações</th>
    </tr>
  </thead>

  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%= client.name %></td>
        <td><%= client.fantasy_name %></td>
        <td><%= client.cnpj %></td>
        <td><%= client.phone1 %></td>
        <td><%= client.address_complete %></td>
        <td><%= client.vendor_name %></td>
        <td><%= client.city_name %></td>
        <td><%= client.date_last_buy %></td>
        <td><%= link_to 'Editar', edit_client_path(client), :class => 'btn btn-sm btn-primary' %>
            <%= link_to 'Apagar', client, 
            method: :delete, 
            data: { confirm: 'Tem certeza?' },
            :class => 'btn btn-sm btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

