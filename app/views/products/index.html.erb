<%- model_class = Product -%>
<div class="page-header">
  <h1>
    <%=t '.title', :default => model_class.model_name.human.pluralize.titleize %>
    <%= link_to t('.new', :default => t("helpers.links.new")), new_product_path, :class => 'btn btn-primary' %>    
  </h1> 
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:cod) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:unit) %></th>
      <th><%= model_class.human_attribute_name(:barcode) %></th>
      <th><%= model_class.human_attribute_name(:valid_date) %></th>
      <th><%= model_class.human_attribute_name(:retail_price) %></th>
      <th><%= model_class.human_attribute_name(:wholesale) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.cod %></td>
        <td><%= product.name %></td>
        <td><%= product.unit %></td>
        <td><%= product.barcode %></td>
        <td><%= product.valid_date %></td>
        <td><%= number_to_currency product.retail_price %></td>
        <td><%= number_to_currency product.wholesale %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_product_path(product), :class => 'btn btn-primary fa fa-pencil-square-o' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      product_path(product),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Tem certeza?')) },
                      :class => 'btn btn-danger ' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>