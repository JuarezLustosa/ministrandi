<%- model_class = Product -%>
<div class="page-header">
  <h1>
    <%=t '.title', :default => model_class.model_name.human.pluralize.titleize %>
    <%= link_to t('.new', :default => t("helpers.links.new")), new_product_path, :class => 'btn btn-primary' %>    
  </h1> 
</div>

<table class="table table-striped table-bordered table-hover table-condensed" id="products_table">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:cod) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:unit) %></th>
      <th><%= model_class.human_attribute_name(:group) %></th>
      <th><%= model_class.human_attribute_name(:retail_price) %></th>
      <th><%= model_class.human_attribute_name(:wholesale) %></th>
      <th><%= model_class.human_attribute_name(:wholesale_term) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.cod %></td>
        <td><%= product.name %></td>
        <td><%= product.unit %></td>
        <td><%= product.group_name %></td>
        <td><%= number_to_currency product.retail_price %></td>
        <td><%= number_to_currency product.wholesale %></td>
        <td><%= number_to_currency product.wholesale_term %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
            edit_product_path(product), 
            :class => 'btn btn-primary fa fa-pencil-square-o btn-sm' %>
            
          <%= link_to 'Apagar', product_path(product),
            :method => :delete,
            data: { confirm: 'Tem certeza que deseja excluir?' },
            :class => 'btn btn-danger btn-sm fa fa-trash-sm' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>