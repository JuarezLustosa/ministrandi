<div class="page-header center">
  <h1 class="text-center">Lista de Preço Atacado</h1>
</div>
<table class="table table-striped table-bordered">
  <caption>Produtos</caption>
  
  <thead>
    <tr>
      <th>Código</th>
      <th>Descrição</th>
      <th>Unidade</th>
      <th>Preço</th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.cod %></td>
        <td><%= product.name %></td>
        <td><%= product.unit %></td>
        <td><%= number_to_currency product.wholesale %></td>
      </tr>
    <% end %>
  </tbody>
</table>