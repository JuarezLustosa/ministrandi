<h1 class="text-center">
  <img src="/assets/logo.png">    
</h1>

<div class="page-header center">
  <h2 class="text-center">Lista de Preço <%= params[:criteria] %></h2>
</div>

<table class="table table-striped table-bordered">
  <% @fathers_product_groups.each do |father| %>
    <thead>
      <tr class="info">
        <th colspan="5" style="text-align:center;" id="father"><%= father.name %></th>
      </tr>
    <% father.children.each do |children| %>
      <tr class="warning">
        <th colspan="5" style="text-align:center"><%= children.name %></th>
      </tr>
      <tr>
        <th>Código</th>
        <th>Descrição</th>
        <th>Unidade</th>
        <th>Cod Barras</th>
        <th>Preço</th>
      </tr>
    </thead>
      <% children.products.each do |product| %>
      <tbody>
        <tr>
          <td><%= product.cod %></td>
          <td><%= product.name %></td>
          <td><%= product.unit %></td>
          <td><%= product.barcode %></td>
          <td><%= number_to_currency product.price(params[:criteria]) %></td>
        </tr>
     </tbody>
     <% end %>
    <% end %>
  <% end %>
</table>