<%= simple_form_for @group, :url => products_groups_path do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :parent_id, 
        :as => :select, 
        :collection => nested_options(Product::Group.all, @group), 
        :input_html => { :autofocus => true } %>
    <%= f.input :name %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                products_groups_path, :class => 'btn btn-default' %>
  </div>
<% end %>