<%- model_class = Product::Group -%>
<div class="page-header">
  <h1>Grupo de produtos</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name (:name)%></th>
      <th><%= model_class.human_attribute_name (:parent)%></th>
      <th>Ações</th>
    </tr>
  </thead>

  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td><%= group.name %></td>
        <td><%= group.parent %></td>
        <td><%= link_to 'Editar', edit_products_group_path(group), :class => 'btn btn-sm btn-primary' %>
            <%= link_to 'Apagar', products_group_path(group), 
            method: :delete, 
            data: { confirm: 'Tem certeza que deja deletar?' },
            :class => 'btn btn-sm btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo', new_products_group_path, :class => 'btn btn-primary' %>
