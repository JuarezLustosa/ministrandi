<div class="page-header">
  <h1>Contas a Pagar <%= link_to 'Nova', new_bill_path, :class => 'btn btn-primary' %></h1> 
</div>
<table class="table table-striped table-bordered table-condensed" id="clients_table">
  <thead>
    <tr>
      <th>Descrição</th>
      <th>Fornecedor</th>
      <th>Valor</th>
      <th>Data Vencimento</th>
      <th>Ações</th>
    </tr>
  </thead>

  <tbody>
    <% @bills.each do |bill| %>
      <tr>
        <td><%= bill.description %></td>
        <td><%= bill.supplier %></td>
        <td><%= bill.valor %></td>
        <td><%= bill.payment_day %></td>
        <td><%= link_to 'Editar', edit_bill_path(bill), :class => 'btn btn-sm btn-primary' %>
            <%= link_to 'Apagar', bill, 
            method: :delete, 
            data: { confirm: 'Tem certeza?' },
            :class => 'btn btn-sm btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

