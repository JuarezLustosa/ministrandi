<% if @clients.any? %>

<div class="page-header">
  <h1>Clientes</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Razão Social</th>
      <th>Nome Fantasia</th>
      <th>Telefone</th>
      <th>Endereço</th>
      <th>Bairro</th>
      <th>Cidade</th>
      <th>Data da ultima compra</th>
    </tr>
  </thead>
  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%= client.name %></td>
        <td><%= client.fantasy_name %></td>
        <td><%= client.phone1 %></td>
        <td><%= client.address_complete %></td>
        <td><%= client.neighborhood %></td>
        <td><%= client.city_name %></td>
        <td><%= client.date_last_buy %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% else %>
  Não foi encontrado nenhum registro.
<% end %>