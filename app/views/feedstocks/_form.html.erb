<%= simple_form_for @feedstock, :html => { :class => 'form-horizontal' }, wrapper: :horizontal_form do |f| %>

  <%= f.error_notification %>
  <%= f.input :name, required: true  %>
  <%= f.input :weight, as: :string %> 
  <%= f.input :description, input_html: { maxlength: 10, row:1 } %>
  <%= f.input :med %>
  <%= f.input :min_stock, as: :string %>
  <%= f.input :critic_stock, as: :string %>
  <%= f.input :quantity, as: :string  %>
  
  <%= f.button :submit, "Salvar", :class => 'btn btn-primary btn-lg btn-block' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")), feedstocks_path, :class => 'btn btn-default btn-block' %>
<% end %>
