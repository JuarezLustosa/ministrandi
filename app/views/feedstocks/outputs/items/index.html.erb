<div class="page-header">
  <h1>Itens da SaÃ­da</h1>
</div>
<div class="container">  
  <%= form_tag feedstocks_output_items_path, :method => :post, :remote => true, class: "form-inline"  do %>
    <%= text_field_tag :autocomplete_feedstock, (""),
                       :class => "form-control",
                       "data-source" => autocompletes_feedstocks_path,
                       placeholder: "Pesquisar Produto",
                       size: 50  %>
    <%= hidden_field_tag :feedstock_id %>
  
    <%= text_field_tag :quantity, (""), placeholder: "Quantidade", size: 10, :class => "form-control" %>

    <%= submit_tag 'Adicionar', class: "btn btn-primary" %>
<% end %>
</div>

<div id="list_items">
  <%= render 'feedstocks/outputs/items/list_items' %>
</div>

<div class="form-actions">
  <% unless @feedstock_output.finish? %>
    <%= link_to "Finalizar", 
      feedstocks_output_finish_path(@feedstock_output), 
      :method => :put,
      :disable_with => "Aguarde...",
      :class => 'btn btn-small btn-danger',
      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }  %>
   <% end %>
</div>