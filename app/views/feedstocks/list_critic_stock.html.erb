<%- model_class = Feedstock -%>
<div class="page-header">
  <h1>Mat√©rias primas abaixo do estoque</h1>
</div>

<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:med) %></th>
      <th><%= model_class.human_attribute_name(:weight) %></th>
      <th>Quantidade em estoque</th>
    </tr>
  </thead>
  <tbody>
    <% @feedstocks.each do |feedstock| %>
      <tr>
        <td><%= feedstock.name %></td>
        <td><%= feedstock.med %></td>
        <td><%= feedstock.weight %></td>
        <td><%= feedstock.quantity %></td>
      </tr>
    <% end %>
  </tbody>
</table>