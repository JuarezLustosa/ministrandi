<div class="page-header">
  <h1>Itens da Entrada</h1>
</div>

<%= form_tag feedstocks_entrance_items_path, :method => :post, :remote => true do %>
  <%= text_field_tag :autocomplete_feedstock, (""),
                     :class => "search-query",
                     "data-source" => autocompletes_feedstocks_path %>
  <%= hidden_field_tag :feedstock_id %>

  <%= text_field_tag :price_unit, (""), placeholder: "PreÃ§o UnitÃ¡rio", size: 10  %>
  <%= text_field_tag :quantity, (""), placeholder: "Quantidade", size: 10  %>

  <div class="form-actions">
    <%= submit_tag 'Adicionar' %>
  </div>
<% end %>

<div id="list_items">
  <%= render 'feedstocks/entrances/items/list_items' %>
</div>

<div class="form-actions">
  <%= link_to "Finalizar", 
    feedstocks_entrance_finish_path(@feedstock_entrance), 
    :method => :put,
    :class => 'btn btn-small btn-danger',
    :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }  %>
</div>

