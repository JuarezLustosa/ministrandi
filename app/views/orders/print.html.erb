<%- model_class = Order -%>
<div class="page-header">
  <h3 class="text-center">Pedido Número - <%= @order.id %></h1>
  <h4 class="text-center"> Status  <kbd><%=  @order.human_state_name %></kbd></h3>
  <h5 class="text-center hidden-print"> <%= link_to "Voltar", orders_path%></h3>
</div>

<dl class="dl-horizontal page-header">
  <div>
  <dt><strong>Client:</strong></dt>
  <dd><%= @order.client_name %></dd>
  <dt><strong>Cidade:</strong></dt>
  <dd><%= @order.client_city_name %></dd>
  
  <dt><strong><%= model_class.human_attribute_name(:vendor) %>:</strong></dt>
  <dd><%= @order.vendor_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:date) %>:</strong></dt>
  <dd><%= l @order.date %></dd>
</dl>

<h4 class="text-center">Produtos</h3>
<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>Produto</th>
      <th>Quantidade</th>
      <th>Quantidade atendida</th>
    </tr>
  </thead>

  <tbody>
    <% @order.items.each do |item| %>
      <tr>
        <td><%= item.product_name %></td>
        <td><%= item.quantity %></td>
        <td></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% if @order.exchange_items.any? %>
  <h3 class="text-center">Trocas</h3>
  <table class="table table-striped table-bordered table-condensed">
    <thead>
      <tr>
        <th>Produto</th>
        <th>Quantidade</th>
        <th>Quantidade atendida</th>
      </tr>
    </thead>

    <tbody>
      <% @order.exchange_items.each do |item| %>
        <tr>
          <td><%= item.product_name %></td>
          <td><%= item.quantity %></td>
          <td></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

<% if @order.nf? %>      
  <div class="container">
    <div class="pull-left">
      <dl class="dl-horizontal page-header">
        <dt><strong>Observação:</strong></dt>
        <dd>Enviar NF</dd>
      </dl>
    </div>
  </div>
<% end %>

<div class="pull-left">
  <dl class="dl-horizontal page-header">
    <dt><strong>Atendido por:</strong></dt>
    <dt><strong>Data:  </strong></dt>
  </dl>
</div>

