<%- model_class = Order -%>
<div class="page-header">
  <h1 class="text-center">Pedido Número - <%= @order.id %></h1>
  <h3 class="text-center"> Status  <kbd><%=  @order.human_state_name %></kbd></h3>
  <h5 class="text-center hidden-print"> <%= link_to "Voltar", orders_path%></h3>
</div>

<dl class="dl-horizontal page-header">
  <dt><strong><%= model_class.human_attribute_name(:client) %>:</strong></dt>
  <dd><%= @order.client_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:vendor) %>:</strong></dt>
  <dd><%= @order.vendor_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:date) %>:</strong></dt>
  <dd><%= l @order.date %></dd>
</dl>


<h3 class="text-center">Produtos</h3>
<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>Produto</th>
      <th>Quantidade</th>
      <th>Valor</th>
    </tr>
  </thead>

  <tbody>
    <% @order.items.each do |item| %>
      <tr>
        <td><%= item.product_name %></td>
        <td><%= item.quantity %></td>
        <td><%= item.total_price %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% if @order.exchange_items.any? %>
  <h3 class="text-center">Trocas</h3>
  <table class="table table-striped table-bordered table-condensed">
    <thead>
      <tr>
        <th>Produto</th>
        <th>Quantidade</th>
      </tr>
    </thead>

    <tbody>
      <% @order.exchange_items.each do |item| %>
        <tr>
          <td><%= item.product_name %></td>
          <td><%= item.quantity %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

<div class="form-actions">
  <dl class="dl-horizontal page-header">
  <dt><strong><p class="lead text-left">TOTAL:</p></strong></dt>
  <dd><p class="lead text-right"><%= number_to_currency(@order.total_valor)%></p></dd>
</div>

<h3 class="text-center">Chegada no cliente</h3>
<h5 class="text-center">Favor conferir mercadoria no ato da entrega</h5>
<div class="table-responsive">
  <table class="table">
    <thead>
    </thead>
    <tbody>
      <tr>
        <td> Nome:__________________ </td>
        <td> RG:___________________ </td>
        <td> Data : ____/____/_______ </td>
        <td> Hora: ____ : _______ </td>
        <td> Ass:___________________ </td>
        <td> Obs: </td>
      </tr>
    <tbody>  
  </table>
</div>

<div class="pull-left">
  <dl class="dl-horizontal page-header">
    <dt><strong>Conferido pelo funcionário:</strong></dt>
    <dd>______________________________</dd>
    <dt><strong>Data:  </strong></dt>
    <dd>____/____/_______</dd>
  </dl>
</div>
