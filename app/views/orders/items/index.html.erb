<div class="page-header">
  <h1>Pedido <%= order.id %> </h1>
</div>

<%= render 'orders/items/form_tag' %>

<div id="list_items">
  <%= render 'orders/items/list_items' %>
</div>

<div id="container-fluid">
  <div class="row-fluid">
    <div class="span2">
      <%= button_tag " Adicionar Troca", class: "btn btn-default icon-plus", :id => "button_exchange"  %>
    </div>
  </div>
</div>

<div id="exchange">
  <%= render 'orders/items/exchange_form_tag' %>
</div>

<div id="exchange_list_items">
  <%= render 'orders/items/exchange_list_items' %>
</div>

<div id="container-fluid">
  <div class="row-fluid">
    <div class="span2">
      <%= button_tag " Adicionar Desconto", class: "btn btn-default icon-plus", :id => "button_descount"  %>
    </div>
  </div>
</div>

<div id="descount">
  <%= render 'orders/descount', :order => @order %>
</div>

<div id="container-fluid">
  <div class="row-fluid">       
    <div class="span6" id="total_descount">
      <%= render 'orders/items/total_descounts' %>
    </div>
      <div class="span6" id="total_items">
        <%= render 'orders/items/total_items' %>
      </div>
  </div>
</div>

<div class="form-actions">
  <% if @order.attending? %>
    <%= link_to "Pedido Pronto", 
      order_ready_path(@order), 
      :method => :put,
      :class => 'btn btn-small btn-info',
      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Tem certeza?')) }  %>
    <% else %>
      <%= link_to "Enviar para produção", 
        order_attendance_path(@order), 
        :method => :put,
        :class => 'btn btn-small btn-danger',
        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Tem certeza?')) }  %>    
  <% end %>
</div>