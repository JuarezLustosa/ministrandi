<% if exchange_items.any? %>
  <h3> Trocas </h3>

  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th>Produto</th>
        <th>Quantidade</th> 
        <th>Ação</th>
      </tr>
    </thead>
      <tbody>
        <% exchange_items.each do |exchange_item| %>
          <tr>
            <td><%= exchange_item.product_name %></td>
            <td><%= exchange_item.quantity %></td>
            <td>
              <%= link_to "Apagar",
                          order_exchange_item_path(order, exchange_item),
                          :method => :delete,
                          :remote => true,
                          :class => 'btn btn-mini btn-danger' %>
            </td>
          </tr>
        <% end %>
      </tbody>
  </table>
<% end %>