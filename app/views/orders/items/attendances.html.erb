<div class="page-header">
  <h1>Pedido<%= order.id %>  Status - <%= order.state %> </h1>
</div>

<%= render 'orders/items/form_tag' %>

<div id="list_items">
  <%= render 'orders/items/attendances_items' %>
</div>

<div id="separated_items">
  <%= render 'orders/items/separated_items' %>
</div>

<div id="total_items">
  <%= render 'orders/items/total_items' %>
</div>

<div class="form-actions">
  <%= link_to "Enviar para produção", 
    order_attendance_path(@order), 
    :method => :put,
    :class => 'btn btn-small btn-danger',
    :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Tem certeza?')) }  %>
</div>