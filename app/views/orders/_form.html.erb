<%= simple_form_for @order, :html => { :class => 'form-inline' } do |f| %>
  <%= f.error_notification %>
    
    <%= f.input :client,
      as: :string, 
      input_html: { class: 'search-query', autofocus: true, value: @order.client.try(:name) || ""}, 
      required: true %>
    <%= f.input :client_id, as: :hidden %>
    <%= f.input :vendor, 
      as: :string, 
      input_html: { class: 'search-query', value: @order.vendor.try(:name) || ""}, 
      required: true %>
    <%= f.input :user_id, as: :hidden  %>
    <%= f.input :date, as: :string, input_html: { class: 'date', value: date_translation(@order.date) } %>    

  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                orders_path, :class => 'btn' %>
  </div>
<% end %>