<div class="page-header">
  <h1>Inserir mat√©ria-prima no estoque</h1>
</div>
<div class="row">
  <div class="col-md-8">
    <%= simple_form_for @stock, :html => { :class => 'form-horizontal' }, wrapper: :horizontal_form do |f| %>
      <%= f.input :product, as: :search, input_html: {class: 'search', autofocus: true, placeholder: "Pesquise pelo produto"} %>
      <%= f.input :product_id,  as: :hidden %>
      <%= f.input :quantity, as: :string %>
      <%= f.input :local, :as => :select, :collection => StockLocations.to_a %>
  
      <%= f.button :submit, "Salvar", :class => 'btn btn-primary btn-lg btn-block' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")), stocks_path, :class => 'btn btn-default btn-block' %>
    <% end %>
  </div>
</div>