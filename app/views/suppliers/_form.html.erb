<%= simple_form_for(@supplier) do |f| %>
  <%= f.error_notification %>

  <div class="form-input">
    <%= f.input :name, input_html: { class: 'input-xxlarge' } %>
    <%= f.input :fantasy, input_html: { class: 'input-xxlarge' }  %>
    <%= f.input :cnpj, as: :string %>
    <%= f.input :contact %>
    <%= f.input :email %>
    <%= f.input :phone1, as: :string %>
    <%= f.input :phone2, as: :string %>
    <%= f.input :state_scription %>
    <%= render 'addresses/address_fields_for', :f => f %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                suppliers_path, :class => 'btn' %>
  </div>
<% end %>