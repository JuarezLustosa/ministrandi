<div class="page-header">
  <h1>Fechar Caixa</h1>
</div>

<table class="table table-striped table-bordered table-condensed" id="clients_table">
  <thead>
    <tr>
      <th>Número do Caixa</th>
      <th>Data</th>
      <th>Ações</th>
    </tr>
  </thead>

  <tbody>
    <% @cashiers.each do |cashier| %>
      <tr>
        <td><%= cashier.id %></td>
        <td><%= l cashier.created_at %></td>
        <td><%= link_to 'FECHAR', cashier_close_path(cashier), method: :put, :class => 'btn btn-sm btn-primary' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
