<%= simple_form_for @cashiers_entrance, :url  => cashiers_entrances_path do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :money, as: :string %>
    <%= f.input :user, 
      as: :string,
      id: :entrance_user, 
      input_html: { class: 'search-query'},
      required: true %>
      
    <%= f.input :user_id, as: :hidden %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Abrir Caixa", :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                root_path, :class => 'btn' %>
  </div>
<% end %>